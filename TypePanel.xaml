<UserControl x:Class="SkyrimCraftingTool.TypePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SkyrimCraftingTool">

    <UserControl.Resources>
        <local:BoolToVisConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <StackPanel>
        <!-- Armor -->
        <StackPanel Visibility="{Binding IsArmor, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="Armor Slot"/>
            <ComboBox ItemsSource="{Binding ArmorSlots}"
                  SelectedItem="{Binding ArmorSlot}" />
            <TextBlock Text="Armor Rating"/>
            <TextBox Text="{Binding ArmorRating}"/>
        </StackPanel>

        <!-- Weapon -->
        <StackPanel Visibility="{Binding IsWeapon, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="Weapon Type"/>
            <ComboBox ItemsSource="{Binding WeaponTypes}"
                  SelectedItem="{Binding WeaponType}" />
            <TextBlock Text="Damage"/>
            <TextBox Text="{Binding Damage}"/>
        </StackPanel>
    </StackPanel>

</UserControl>
