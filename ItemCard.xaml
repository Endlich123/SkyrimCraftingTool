<UserControl x:Class="SkyrimCraftingTool.ItemCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SkyrimCraftingTool"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Top"
             MinHeight="100"
             Margin="0 0 0 15">

    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Background="#555"
            HorizontalAlignment="Stretch">

        <StackPanel>

            <!-- Shared Info -->
            <local:SharedInfoPanel DataContext="{Binding}" />

            <Separator/>

            <!-- Vendor Panel -->
            <local:VendorPanel DataContext="{Binding VendorPanel}" />

            <Separator/>

            <!-- Type Panel -->
            <local:TypePanel DataContext="{Binding}" />

            <Separator/>

            <!-- Workbench -->
            <local:WorkbenchPanel DataContext="{Binding}" />

            <Separator/>

            <!-- Materials -->
            <local:MaterialsPanel DataContext="{Binding}" />

        </StackPanel>

    </Border>
</UserControl>
