<UserControl x:Class="SkyrimCraftingTool.WorkbenchPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
        <TextBlock Text="Workbench:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox ItemsSource="{Binding Workbenches}"
                  SelectedItem="{Binding SelectedWorkbench, UpdateSourceTrigger=PropertyChanged}"
                  Width="200"
                  VerticalAlignment="Center"/>
    </StackPanel>

</UserControl>
